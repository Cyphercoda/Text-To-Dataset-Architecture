# Environment Configuration Example
# Copy this file to .env and .env.local and configure your values

# API Configuration
VITE_API_URL=https://api.textdataset.com/v1
VITE_WS_URL=wss://ws.textdataset.com
VITE_CDN_URL=https://cdn.textdataset.com

# AWS Configuration
VITE_AWS_REGION=us-east-1
VITE_AWS_USER_POOL_ID=us-east-1_XXXXXXXXX
VITE_AWS_USER_POOL_CLIENT_ID=abcdefghijklmnopqrstuvwxyz
VITE_AWS_IDENTITY_POOL_ID=us-east-1:xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
VITE_AWS_S3_BUCKET=textdataset-uploads
VITE_AWS_CLOUDWATCH_LOG_GROUP=/aws/textdataset/frontend

# Application Configuration
VITE_APP_NAME=Text Dataset Platform
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=AI-powered text-to-dataset platform with real-time processing
VITE_APP_URL=https://textdataset.com

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_CHAT=true
VITE_ENABLE_REAL_TIME=true
VITE_ENABLE_OFFLINE_SUPPORT=true
VITE_ENABLE_PWA=true
VITE_ENABLE_NOTIFICATIONS=true

# Development Configuration
VITE_DEV_TOOLS=true
VITE_MOCK_API=false
VITE_ENABLE_LOGGING=true
VITE_LOG_LEVEL=debug

# Performance Configuration
VITE_MAX_FILE_SIZE=100000000
VITE_MAX_FILES_PER_UPLOAD=50
VITE_CHUNK_SIZE=5000000
VITE_REQUEST_TIMEOUT=30000
VITE_WEBSOCKET_TIMEOUT=5000

# Security Configuration
VITE_ENFORCE_HTTPS=true
VITE_CSP_ENABLED=true
VITE_SESSION_TIMEOUT=3600000

# Third-party Integration
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X
VITE_SENTRY_DSN=https://xxxxxxxx@sentry.io/xxxxxxx
VITE_MIXPANEL_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Monitoring and Observability
VITE_ERROR_REPORTING=true
VITE_PERFORMANCE_MONITORING=true
VITE_USER_ANALYTICS=true

# Theme Configuration
VITE_DEFAULT_THEME=system
VITE_THEME_PERSISTENCE=true

# Cache Configuration
VITE_CACHE_DURATION=300000
VITE_OFFLINE_CACHE_SIZE=50000000

# Upload Configuration
VITE_SUPPORTED_FORMATS=pdf,doc,docx,txt,csv,json,xml
VITE_IMAGE_FORMATS=jpg,jpeg,png,gif,webp
VITE_COMPRESSION_ENABLED=true
VITE_COMPRESSION_QUALITY=0.8

# Processing Configuration
VITE_DEFAULT_PROCESSING_CONFIG={"extractEntities":true,"analyzeSentiment":true,"classifyDocument":true,"extractKeyPhrases":true,"qualityThreshold":0.8}

# Notification Configuration
VITE_NOTIFICATION_DURATION=5000
VITE_MAX_NOTIFICATIONS=5

# Chat Configuration
VITE_CHAT_MAX_MESSAGES=1000
VITE_CHAT_FILE_UPLOAD=true
VITE_CHAT_VOICE_INPUT=true

# Analytics Configuration
VITE_ANALYTICS_RETENTION_DAYS=90
VITE_ANALYTICS_EXPORT_FORMATS=csv,excel,json,pdf